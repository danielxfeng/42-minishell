{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Compile Tests",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-pthread",
                "-o",
                "build/${fileBasenameNoExtension}",
                "${file}",
                "test/unity/unity.c",
                "-Itest/unity",
                "-I./src/include/",
                "-I./src/libs/libft/",
                "src/adaptor/*.c",
                "src/ast/*.c",
                "src/builtin/*.c",
                "src/executor/*.c",
                "src/utils/executor_utils.c",
                "src/exit_handler/*.c",
                "src/libs/libft/*.c",
                "src/env/*.c",                
                "-lreadline",
                "-lhistory",
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles the test file and source files with Unity"
        },
        {
